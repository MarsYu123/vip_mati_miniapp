/* pages/join_pay/join_pay.wxss */
@import '../long_vip_pay/long_vip_pay.wxss';
.vip_kv {
    position: relative;
    padding: 0;
    width: 710rpx;
    background: transparent;
    box-shadow: none
}
.vip_msg{
    margin: 0
}

.vip_kv image {
    width: 100%
}

.one{
    bottom: 70rpx;
}

.vip_tips {
    position: absolute;
    right: 30rpx;
    bottom: 30rpx;

}

.join_wait,.join_end,.ios{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 16px;
    box-shadow: 0 -1px 1px 0 rgba(0,0,0,0.07);
    text-align: center;
    position: fixed;
    bottom: 0;
    left: 0;
}
.join_wait{
    background: #ffffff;
    color: #E62112;
}
.join_end{
    color: #FFFFFF;
    background: #9B9B9B;
}
.ios{
    background: #4897AF
}