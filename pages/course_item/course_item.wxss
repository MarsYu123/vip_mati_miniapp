/* pages/course_item/course_item.wxss */
@import '../mould/call/call.wxss';
.list{
    position: absolute;
  top: 0;
  left: 50%;
  bottom: 50rpx;
  transform: translateX(-50%);
  overflow: hidden;
  width:100%;
  height: 100%;
}
.course_item {
    overflow-y: scroll;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
    padding-right: 22px;
    width: 100%;
    height: 100%;
    padding-bottom:100rpx;
}
.kv{
    background: #F6FBFD;
    position: relative;
    overflow: hidden;
    margin: 40rpx 20rpx;
    box-sizing: border-box;
    padding: 0 44rpx;
    text-align: center;
}
.title {
    font-size: 36rpx;
    margin: 10rpx auto;
    text-align: center;
    color: #000000;
}
.nav{
    font-size: 24rpx;
    color: #a4a9b3;
    margin: 20rpx 0
}
.nav text.active{
    color: #000000
}
.cover {
    width: 100%;
    margin: auto;
    overflow: hidden;
    position: relative;
}

.cover image {
    width: 100%;
}

.kv_bottom{
    display: flex;
    justify-content: space-between;
    align-items:flex-end;
    margin-bottom: 30rpx
}
.price{
    display: flex;
    justify-content: flex-start;
    align-items:flex-end;
    font-size: 28rpx;
    color: #e85858;
    line-height: 43rpx;
}
.new_price{
    font-size: 28rpx;
    color: #e85858;
    line-height: 52rpx
}
.old_price{
    font-size: 24rpx;
    color: #aeadad;
    text-decoration: line-through;
    line-height: 43rpx;
    margin-left: 20rpx
}
.time{
    font-size: 24rpx;
    line-height: 43rpx
}

.tip {
    padding: 0 25rpx;
    font-size: 0;
    background: #fff7ee;
    height: 60rpx;
    line-height: 60rpx;
    text-align: justify;
    /* display: flex; */
    justify-content: space-between;
    /* flex-wrap:nowrap; */
    /* align-content:center */
    display: flex;  
    flex-wrap: nowrap;  
    align-items: center;  
}

.tip image {
    width: 32rpx;
    height: 31rpx;
    display: inline-block;
    vertical-align: middle;
}

.tip_text {
    font-size: 24rpx;
    color: #f39a3c;
    display: inline-block;
    vertical-align: middle;
    margin-left: 15rpx
}

.tip_b {
    color: #0b313c
}

.tip_arrow {
    width: 15rpx;
    height: 15rpx;
    border-right: 3rpx #f39a3c solid;
    border-bottom: 3rpx #f39a3c solid;
    transform: rotate(-45deg);
    display: inline-block;
    vertical-align: middle;
    margin-left: 15rpx;
}
.course_msg{
    margin-top: 30rpx; 
    width: 100%;
}
.msg_title{
    margin-bottom: 30rpx;
}
.msg_title text{
    display: block;
    text-align: center
}
.title_h1{
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 10rpx
}
.title_h2{
    font-size: 24rpx;
    color: #a4a9b3;
}
.msg_list{
    background: #F6FBFD;
    margin: 0 20rpx;
}
.msg_item{
    padding: 32rpx 30rpx;
    border-bottom: 1px #edebeb solid;
    box-sizing: border-box;
    display: flex;
    justify-content: flex-start;
    margin: 0 14rpx
}
.msg_item:last-child{
    border: none
}
.item_head{
    display: inline-block;
    vertical-align: middle;
    color: #1e4049;
    font-size: 24rpx;
    margin-right: 40rpx;
    font-weight: bold;
    width: 100rpx;
    flex-shrink:0
}
.item_content{
    display: inline-block;
    vertical-align: middle;
    color: #a4a9b3;
    font-size: 24rpx;
}
.teacher{
    margin-top: 40rpx;
}
.teacher_title{
    font-size: 24rpx;
    color: #a4a9b3;
    text-align: center;
}
.teacher_list{
    display: flex;
    justify-content: space-between;
    padding: 0 50rpx;
    flex-wrap: wrap;
    background: #F6FBFD;
    padding-bottom: 50rpx
}
.teacher_item{
    width: 300rpx;
    height: 330rpx;
    padding: 25rpx 30rpx;
    background: #ffffff;
    margin-top: 30rpx;
    box-sizing: border-box
}
.teacher_item image{
    width: 127rpx;
    height: 127rpx;
    display: block;
    margin: auto;
    border-radius: 50%;
}
.item_name{
    text-align: center;
    margin-top: 20rpx;
}
.item_name text{
    display: inline-block;
    vertical-align: middle
}
.name{
    font-size: 30rpx;
    color: #1e4049;
    font-weight: bold
}
.arrow{
    width: 15rpx;
    height: 15rpx;
    border-right: 3rpx solid #1d829e;
    border-bottom: 3rpx solid #1d829e;
    border-radius: 1px;
    transform: rotate(-45deg);
    margin-left: 10rpx
}
.item_job{
    margin-top: 10rpx;
    height: 90rpx;
    display: flex;
    text-align: center;
    justify-content: center;
    align-items: center;
}
.item_job text{
    color: #a4a9b3;
    font-size: 21rpx;
    line-height: 30rpx;
    display: inline-block;
}

.table{
    margin-top: 40rpx;
    margin-bottom: 100rpx
}
.table_title text{
    display: block;
    text-align: center
}
.table_msg{
    padding: 30rpx;
    background: #ffffff
}
.table_msg image{
    width: 682rpx;
}
.shop{
    width: 100%;
    height: 100rpx;
    background: #ffffff;
    position: fixed;
    bottom: 0rpx;
    left: 0;
    /* border: 1px #1d829e solid; */
    font-size: 36rpx;
    text-align: center;
    box-sizing: border-box;
}
.buy,.know{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background: #1D829E;
    font-size: 36rpx;
    color: #ffffff;
    text-align: center
}
button{
    padding: 0;
    margin: 0;
    border-radius:0
}
.button-hover{
    background:#ffffff
}
.know{
    color: #ffffff;
    background: #1d829e;
}
web-view{
    width: 100%;
    height: 100%;
}
.call_btn{
    z-index: 99999;
}

/* 已下线 */
.off_line{
    position: fixed;
    bottom: 0rpx;
    left: 0;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background: #9f9f9f;
    font-size: 36rpx;
    color: #ffffff;
    text-align: center
}

button.buy{
    position: fixed;
    bottom: 0
}