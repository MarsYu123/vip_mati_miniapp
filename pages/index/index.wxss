/* 首页卡片 */

.home_card {
  background: #fff;
  margin: 0 34rpx;
  margin: 30rpx 0;
}

.card_num {
  border-bottom: #edebeb solid 3rpx;
  margin-left: 51rpx;
  margin-right: 35rpx;
  box-sizing: border-box;
  padding: 25rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center
}

.card_num image {
  width: 41rpx;
  height: 27rpx;
  vertical-align: middle;
}

.card_num text {
  font-size: 24rpx;
  line-height: 26rpx;
  color: #000000;
  font-weight: bold;
  margin-left: 15rpx;
}

.card_ci {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  margin-right: 35rpx
}

.card_left {
  display: inline-block;
  vertical-align: top;
  text-align: left;
  width: 430rpx;
  padding-left: 51rpx;
  box-sizing: border-box;
}

.card_top {
  font-size: 24rpx;
  font-weight: bold;
  display: block;
}

.card_shop_tips {
  width: 316rpx;
  height: 35rpx;
  font-size: 0;
  padding-top: 10rpx;
}

.card_shop_tips image {
  width: 100%;
  height: 100%;
}

.card_bottom {
  font-size: 48rpx;
  color: #1d829e;
  font-weight: 400;
  padding-left: 20rpx
}

.card_right {
  display: inline-block;
  vertical-align: middle;
  position: relative;
}

.card_right_shop {
  font-size: 26rpx;
  width: 110rpx;
  height: 55rpx;
  text-align: center;
  display: inline-block;
  background: #1d829e;
  color: #fff;
  border-radius: 5px;
  line-height: 55rpx;
  overflow: inherit;
  padding: 0;
  position: static;
}

.card_right_shop.button {
  position: absolute;
  z-index: 2;
  top: 0;
  left: 0;
  opacity: 0;
}

.card_right image {
  width: 242rpx;
  height: 39rpx;
}

/* 试听券 */
.free_voucher {
  margin: 0 35rpx;
  font-size: 0;
  margin-bottom: 20rpx
}

.free_voucher image {
  width: 100%;
}

/* 卡片按钮 */

.home_button {
  width: 100%;
  margin-bottom: 20rpx;
  background: #fff;
  text-align: center;
  display: block;
  margin-bottom: 20rpx;
}

.course {
  display: flex;
  justify-content: flex-start;
  box-sizing: border-box;
  height: 100rpx;
  padding: 0 40rpx;
  align-items: center;
  border-bottom: #D8E7ED solid 1px;
  position: relative;
}

.course:last-child {
  border: none
}

.course text {
  font-size: 28rpx;
  color: #000000;
  margin-left: 26rpx;
}

.course image {
  width: 52rpx;
  height: 52rpx;
}

.share {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}

.course:last-child {
  border-right: none;
}

.home_card_tip {
  width: 100%;
  margin: auto;
  text-align: center;
  padding: 30rpx 30rpx;
  background: #ffffff;
  overflow: hidden;
}

.home_card_tip text {
  display: block;
}

.title_h1 {
  font-size: 32rpx;
  border: #edebeb;
  font-weight: bold;
  line-height: 50rpx;
}

.title_h2 {
  color: #aeadad;
  font-size: 22rpx;
  line-height: 40rpx;
}

.card_msg {
  background: #ffffff;
  margin: 20rpx auto;
  text-align: center;
  overflow: hidden;
}

.card_title {
  margin: 20rpx 34rpx;
  padding-top: 15rpx;
  padding-bottom: 20rpx;
  border-bottom: #edebeb 1px solid;
  overflow: hidden;
  position: relative;
}

.card_h1 {
  font-size: 32rpx;
  display: block;
  font-weight: bold;
  line-height: 40rpx;
  position: relative;
}

.card_h1 image {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 8rpx;
  right: 0rpx;
}

.card_h2 {
  font-size: 22rpx;
  color: #aeadad;
}

.msg_item {
  display: inline-block;
}

.msg_item image {
  width: 160rpx;
  height: 140rpx;
}

.foot {
  overflow: hidden;
  padding-bottom: 18rpx;
  margin-top: 15rpx
}

.foot image {
  display: block;
  width: 267rpx;
  height: 107rpx;
  margin: auto;
  /* margin-bottom: 20rpx; */
}

/* 广告 */

.advertising {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
}

.mb {
  width: 100%;
  height: 100%;
  background: rgba(140, 140, 139, 0.67)
}

.box {
  width: 560rpx;
  height: 693rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -300%);
}

.box image {
  width: 100%;
  height: 100%;
}

.box text {
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0%);
  width: 210rpx;
  height: 70rpx;
  bottom: 25rpx;
}

.close {
  width: 55rpx;
  height: 55rpx;
  position: absolute;
  right: 10rpx;
  top: 0;
}

