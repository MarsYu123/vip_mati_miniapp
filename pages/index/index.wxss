/**index.wxss**/

/* 首页头部 */

/* @import "../pay/pay.wxss"; */

@import '../mould/call/call.wxss';

page{
  background: #F4FAFC;
}
.index {
  overflow: hidden;
  width: 100%;
  height: 100%;
}

.home {
  overflow-y: scroll;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
  padding-right: 22px;
  width: 100%;
  height: 100%;
}

button::after {
  border: none;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  height: 248rpx;
  margin-top: 20rpx;
  margin-bottom: 40rpx
}

.home_head {
  width: 100%;
  height: 100%;
  background: #fff;
  color: #000000;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: left;
  margin-left: 40rpx;
}

.userinfo-avatar {
  width: 127rpx;
  height: 127rpx;
  margin: 10rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-sizing: border-box;
}

.user_name {
  position: relative;
}

.userinfo-nickname {
  line-height: 45rpx;
  display: inline-block;
  font-size: 36rpx;
  vertical-align: middle;
}

.user_sex {
  width: 32rpx;
  height: 32rpx;
  display: inline-block;
  margin-left: 15rpx;
  vertical-align: middle;
}
.user_bottom{
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.user_job {
  font-size: 24rpx;
  color: #06617A;
  display: block;
  margin-right: 20rpx
}

.usermotto {
  margin-top: 200rpx;
}

.user_edit {
  position: absolute;
  width: 134rpx;
  height: 40rpx;
  bottom: 20rpx;
  right: 33rpx;
}

.user_edit image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 未登录提示 */

.login {
  font-size: 36rpx;
  line-height: 55rpx;
  padding: 0 15rpx;
  color: #000000;
  font-weight: bold;
  margin: 0;
  background: #ffffff;
  padding: 0
}

.login_text {
  font-size: 24rpx;
  color: #06617A;
  margin-top: 8rpx
}

.home_box>view {
  border: 1px #333 solid;
  margin: 10rpx;
}

.shop_card,
.user {
  width: 300rpx;
  height: 150rpx;
  display: inline-block;
  vertical-align: top;
  position: relative;
}

