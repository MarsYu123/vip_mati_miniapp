/* pages/vip_tips/vip_tips.wxss */
.vip_tips{
    width: 100%;
    height: 100%;
    padding-right: 20rpx;
    overflow: hidden;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    font-size: 0
}
image{
    width: 100%;
}

.swiper{
    width: 100%;
    overflow: hidden;
    margin: 40rpx 0;
    background: #fffdf9
}
.swiper_box{
    width: 1470rpx;
    display: flex;
    transition: all .5s
}
.swiper_item{
    width: 490rpx;
    padding: 20rpx 40rpx;
    /* box-sizing: border-box; */
}
.swiper image{
    width: 100%;
    transition: all .5s;
    transform: scale(1)
}
.swiper image.active{
    transform: scale(1.2)
}